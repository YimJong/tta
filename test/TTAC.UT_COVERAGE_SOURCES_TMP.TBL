DROP TABLE TTAC.UT_COVERAGE_SOURCES_TMP CASCADE CONSTRAINTS;

CREATE GLOBAL TEMPORARY TABLE TTAC.UT_COVERAGE_SOURCES_TMP
(
  FULL_NAME      VARCHAR2(4000 BYTE),
  OWNER          VARCHAR2(250 BYTE),
  NAME           VARCHAR2(250 BYTE),
  LINE           NUMBER(38),
  TO_BE_SKIPPED  VARCHAR2(1 BYTE),
  TEXT           VARCHAR2(4000 BYTE)
)
ON COMMIT PRESERVE ROWS
NOCACHE;


CREATE UNIQUE INDEX TTAC.UT_COVERAGE_SOURCES_TMP_PK ON TTAC.UT_COVERAGE_SOURCES_TMP
(OWNER, NAME, LINE);

ALTER INDEX TTAC.UT_COVERAGE_SOURCES_TMP_PK
  MONITORING USAGE;

ALTER TABLE TTAC.UT_COVERAGE_SOURCES_TMP ADD (
  CONSTRAINT UT_COVERAGE_SOURCES_TMP_PK
  PRIMARY KEY
  (OWNER, NAME, LINE)
  USING INDEX TTAC.UT_COVERAGE_SOURCES_TMP_PK
  ENABLE VALIDATE);
